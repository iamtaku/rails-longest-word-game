<div class="container">
  <div class="">
    <ul>
      <% @alphabet.each do |letter| %>
      <li class=" p-4 col border bg-info font-weight-bold text-white"><%= letter.capitalize  %></li>
      <% end %>
    </ul>
  </div>
  <form action="/score" method="post" class='center'>
    <input type="text" name="answer">
    <input name="grid" type="hidden" value="<%= @alphabet.join %>" />
    <input type="submit" value='check!'>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
